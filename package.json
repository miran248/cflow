{
  "private": true,
  "name": "cflow",
  "version": "0.0.1",
  "description": "A set of libraries for a secret project",
  "keywords": [
    "cflow"
  ],
  "license": "MIT",
  "author": "miran248",
  "homepage": "https://github.com/miran248/cflow#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miran248/cflow.git"
  },
  "bugs": {
    "url": "https://github.com/miran248/cflow/issues"
  },
  "scripts": {
    "clean": "rimraf packages/*/lib",
    "test:watch": "onchange 'packages/*/src/**/*.js' 'packages/*/tests/**/*.js' -i -- yarn test",
    "test": "jest --passWithNoTests --coverage --verbose",
    "build": "lerna exec --parallel -- babel src -d lib",
    "precommit": "lint-staged",
    "prepublish": "yarn clean && yarn test && yarn build"
  },
  "devDependencies": {
    "lerna": "^2.11.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "onchange": "^4.0.0",
    "lint-staged": "^7.2.0",
    "prettier-eslint": "^8.8.2",
    "jest": "^23.2.0",
    "eslint-plugin-import": "^2.13.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "jest": {
    "resetModules": true,
    "testMatch": [
      "packages/**/tests/**/*.js?(x)",
      "packages/**/?(*.)+(spec|test).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>node_modules/"
    ]
  }
}
