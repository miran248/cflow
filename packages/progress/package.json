{
  "name": "@cflow/progress",
  "version": "0.0.1",
  "description": "ascii progress bar without dependencies",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "test:watch": "onchange 'src/**/*.js' 'test/**/*.js' -i -- npm test",
    "test": "jest --passWithNoTests",
    "build": "babel src --out-dir lib",
    "precommit": "lint-staged",
    "prepublish": "npm run clean && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miran248/cflow.git"
  },
  "keywords": [
    "ascii",
    "progress",
    "bar"
  ],
  "author": "miran248",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miran248/cflow/issues"
  },
  "homepage": "https://github.com/miran248/cflow#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "eslint-plugin-import": "^2.13.0",
    "jest": "^23.2.0",
    "lint-staged": "^7.2.0",
    "onchange": "^4.0.0",
    "prettier-eslint": "^8.8.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "jest": {
    "rootDir": "./test"
  }
}
